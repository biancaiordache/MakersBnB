<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>MakersBnB Sign Up</title>
    <link rel="stylesheet" type="text/css" href="/stylesheets/style.css"/>
  </head>
  <body>

    <div id="hero">
      <div class="navbar">
        <img src="/stylesheets/logo.png" class="logo">
        <div class="user">
          <button type="button">Log in</button>
          <img src="/images/user_icon.png">
        </div>
      </div>

      <div class="container">
        <div class="info">
          <h1>MakersBnB</h1>
          <p>Mi casa es tu casa</p>
        </div>
      </div>

      <div class="sign-up-form">
        <img src="/images/user_icon.png">
        <h1> Sign up now</h1>
        <form action="/users" method="post">
          <label for="email">Email Address</label>
          <input type="email" name="email" class="input-box"/>
          <label for="password">Password</label>
          <input type="password" name="Password" class="input-box" />
          <p></p>
          <button type="submit" class="sign-up-button">Sign up</button>
        </form>
      </div>

      <div class="slider">
        <img src="/stylesheets/left-arrow.png" id="prev">
        <div class="preview">
          <img src="/stylesheets/listing1.jpeg" class="active thumbnail">
          <img src="/stylesheets/listing2.jpeg" class="thumbnail">
          <img src="/stylesheets/listing3.jpeg" class="thumbnail">
          <img src="/stylesheets/listing4.jpeg" class="thumbnail">
        </div>
        <img src="/stylesheets/right-arrow.png" id="next">
      </div>

    </div>

    <script>

      var prev = document.getElementById("prev");
      var next = document.getElementById("next");
      var thumbnail = document.getElementsByClassName("thumbnail");
      var hero = document.getElementbyId("hero");

      var backgroundImg = new Array(
        "/stylesheets/listing1.jpeg",
        "/stylesheets/listing2.jpeg",
        "/stylesheets/listing3.jpeg",
        "/stylesheets/listing4.jpeg",
      );
      let i = 0;
      next.onclick = function(){

        if(i < 4){
          hero.style.backgroundImage = 'url("'+backgroundImg[i+1]+'")';
          thumbnail[i+1].classList.add("active");
          thumbnail[i].classList.remove("active");
          i++;
        }
      }
      prev.onclick = function(){

        if(i > 0){
          hero.style.backgroundImage = 'url("'+backgroundImg[i-1]+'")';
          thumbnail[i-1].classList.add("active");
          thumbnail[i].classList.remove("active");
          i--;
        }
      }

    </script>
  </body>
</html>
